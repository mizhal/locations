<%- model_class = Location -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:name) %>:</strong></dt>
  <dd><%= @location.name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:periods) %>:</strong></dt>
  <dd>
    <table class="table table-stripped"> 
      <thead>
        <tr>
          <td>Day</td>
          <td>Start</td>
          <td>End</td>
        </tr>
      </thead>
      <tbody>
        <% @location.periods.each do |per| %>
          <tr>
            <td><%= day_to_name(per.day) %></td>
            <td><%= l per.start, format: "%H:%M" %></td>
            <td><%= l per.end, format: "%H:%M" %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </dd>
</dl>

<%= link_to t('.back', :default => t("helpers.links.back")),
              locations_path, :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_location_path(@location), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              location_path(@location),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
